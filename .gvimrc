"set t_Co=256
"colorscheme wombat
colorscheme molokai
set number
"set list
set cursorline
"set nobackup
"set visualbell t_vb=

"" フォント
set guifont=CodeM\ Regular:h18

set antialias

"" ウインドウの幅
set columns=200
"" ウインドウの高さ
set lines=80
"" ツールバー非表示
set guioptions-=T
"" メニューバー非表示
set guioptions-=m
"" 左右のスクロールバーを非表示にする
set guioptions-=r
set guioptions-=R
set guioptions-=l
set guioptions-=L
"" 水平スクロールバーを非表示にする
set guioptions-=b
"" ウインドウを半透明に
gui
set transparency=10

"" マルチバイト文字系のlistcharsで表示される設定はgvimrcに書かないと反映されない
"set listchars=tab:>-,trail:-,nbsp:%,extends:>,precedes:<
"set listchars=tab:▸\ ,eol:¬
